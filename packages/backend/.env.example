# Plaid API Keys (Get these from Plaid Dashboard)
PLAID_CLIENT_ID=your_client_id
PLAID_SECRET=your_secret
PLAID_ENV=sandbox

# For MVP testing - Override access token (optional)
# PLAID_ACCESS_TOKEN_OVERRIDE=access-sandbox-xxx

# PostgreSQL Database Configuration (Docker)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=induswealth
DB_USER=induswealth
DB_PASSWORD=induswealth123

# Server Port
PORT=3000

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-min-32-characters-long
JWT_EXPIRES_IN=7d

# AI Insights Configuration
# Get API key from: https://aistudio.google.com/app/apikey
GEMINI_API_KEY=your_gemini_api_key_here
# Cache duration for insights (in hours)
INSIGHTS_CACHE_HOURS=6

# AI Categorization Configuration
# Feature flag to enable AI-powered transaction categorization
AI_CATEGORIZATION_ENABLED=false
# Merchant cache TTL in days (0 = never expire, >0 = TTL in days)
MERCHANT_CACHE_TTL_DAYS=0
# Number of merchants per AI batch request (optimal: 10-20)
AI_CATEGORIZATION_BATCH_SIZE=20
# Minimum confidence threshold to accept AI category (0.0-1.0)
AI_CATEGORIZATION_MIN_CONFIDENCE=0.7
